# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Customize to your needs...

# Prezto prompts
zstyle ':prezto:module:prompt' theme 'sivac'

# Vi mode
bindkey -v
bindkey -M vicmd '/' history-incremental-search-backward
export KEYTIMEOUT=1

alias c=clear
alias root='sudo su -'
alias df='df -h'
alias du='du -hs'
alias ll='ls -larth'
alias ssh='ssh -o StrictHostKeyChecking=no'

alias vi='/usr/bin/vim'
alias vz='vi ~/.zshrc'
alias vv='vi ~/.vimrc'
alias ez='exec zsh'
alias zp='vi ~/.zprezto/modules/prompt/functions/prompt_sivac_setup'
alias nr='netstat -rn'

# Git
alias gs='git status'
alias gp='git push origin master'
alias gg='git push -u gerrit master'
alias gci='git commit -v'
alias ga='git add'
alias gd='git diff'
alias gpl='git pull'
alias gf='git fetch'
alias gc='git clone'
alias gr='git remote -v'
alias gcfl='git config -l'
alias gl="git log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an <%ae>%Creset' --abbrev-commit"

alias g='cd ~/git'

export EDITOR="/usr/bin/vim"
export VISUAL="/usr/bin/vim"

export PATH=/usr/local/bin:$PATH

function remhosts {
sed -e ''$1'd' ~/.ssh/known_hosts > ~/.ssh/tmp
mv -f ~/.ssh/tmp ~/.ssh/known_hosts
}

#history
h() { if [ -z "$*" ]; then history 1; else history 1 | egrep "$@"; fi; }

# du sort by size
function duf {
du -sk "$@" | sort -n | while read size fname; do for unit in k M G T P E Z Y; do if [ $size -lt 1024 ]; then echo  -e "${size}${unit}\t${fname}"; break; fi; size=$((size/1024)); done; done
}

# transpose
function trs {
awk '
{
    for (i=1; i<=NF; i++)  {
        a[NR,i] = $i
    }
}
NF>p { p = NF }
END {
    for(j=1; j<=p; j++) {
        str=a[1,j]
        for(i=2; i<=NR; i++){
            str=str" "a[i,j];
        }
        print str
    }
}' $@
}

# The next line updates PATH for the Google Cloud SDK.
if [ -f '/Users/shiva/google-cloud-sdk/path.zsh.inc' ]; then source '/Users/shiva/google-cloud-sdk/path.zsh.inc'; fi

# The next line enables shell command completion for gcloud.
